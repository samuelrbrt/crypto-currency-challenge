<?xml version="1.0" encoding="utf-8"?>

<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_auto_start="true"
    tools:shimmer_base_alpha="1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">

        <TextView
            android:id="@+id/shimmerUsernameTV"
            android:layout_width="100dp"
            android:layout_height="12dp"
            android:background="@drawable/shimmer_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/shimmerNmeTV"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="36dp"
            android:background="@drawable/shimmer_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/shimmerUsernameTV"
            app:layout_constraintTop_toBottomOf="@id/shimmerUsernameTV" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>